@model FACTURA_EVALUACION.Models.Factura

@{
    ViewData["Title"] = "Editar Factura";
}

<h1>Editar Factura</h1>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" />
        <span asp-validation-for="Fecha" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ClienteId"></label>
        <input asp-for="ClienteId" class="form-control" />
        <span asp-validation-for="ClienteId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VendedorId"></label>
        <input asp-for="VendedorId" class="form-control" />
        <span asp-validation-for="VendedorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MetodoPagoId"></label>
        <input asp-for="MetodoPagoId" class="form-control" />
        <span asp-validation-for="MetodoPagoId" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>